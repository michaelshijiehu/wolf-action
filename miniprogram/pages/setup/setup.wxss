/* pages/setup/setup.wxss */
.container {
  min-height: 100vh;
  padding: 24rpx;
  padding-bottom: 140rpx;
  background-color: #0a0a0c;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  box-sizing: border-box;
}

.section {
  width: 100%;
  background: rgba(255, 255, 255, 0.05);
  /* Glassmorphism */
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  box-sizing: border-box;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  text-transform: uppercase;
  letter-spacing: 2rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 6rpx;
  height: 24rpx;
  background: #ffd700;
  margin-right: 12rpx;
  border-radius: 4rpx;
}

.role-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
}

.role-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.role-name {
  font-size: 32rpx;
  color: #eee;
  display: flex;
  align-items: center;
  font-weight: 500;
}

.counter {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

/* Enhanced Counter Buttons */
.btn-op {
  width: 72rpx;
  height: 72rpx;
  line-height: 66rpx;
  text-align: center;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  font-size: 40rpx;
  color: #fff;
  background: rgba(255, 255, 255, 0.05);
  transition: all 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-op[data-op="1"] {
  /* Plus Button */
  border-color: rgba(255, 215, 0, 0.5);
  color: #ffd700;
  background: rgba(255, 215, 0, 0.1);
}

.btn-op[data-op="-1"] {
  /* Minus Button */
  border-color: rgba(255, 255, 255, 0.2);
  color: #aaa;
}

.btn-op:active {
  background: rgba(255, 255, 255, 0.15);
  transform: scale(0.95);
}

.btn-op.disabled {
  opacity: 0.2;
  border-color: rgba(255, 255, 255, 0.05);
  pointer-events: none;
}

.count-val {
  width: 60rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #ffd700;
  text-shadow: 0 0 10rpx rgba(255, 215, 0, 0.3);
}

.god-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.god-tag {
  padding: 16rpx 28rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #888;
  background: rgba(255, 255, 255, 0.02);
  transition: all 0.2s;
}

.god-tag.active {
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.2), rgba(255, 174, 0, 0.1));
  border-color: #ffd700;
  color: #ffd700;
  box-shadow: 0 4rpx 12rpx rgba(255, 215, 0, 0.1);
  font-weight: bold;
}

/* Specific Colors for Factions */
.wolf-section .god-tag.active {
  border-color: #ff4d4f;
  color: #ff4d4f;
  background: rgba(255, 77, 79, 0.15);
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgba(10, 10, 12, 0.95);
  padding: 24rpx;
  box-shadow: 0 -10rpx 40rpx rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  backdrop-filter: blur(20px);
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.btn-confirm {
  width: 100%;
  background: linear-gradient(135deg, #ffd700, #ffae00);
  color: #000;
  padding: 24rpx 0;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(255, 174, 0, 0.3);
  letter-spacing: 2rpx;
}

.btn-confirm:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 10rpx rgba(255, 174, 0, 0.2);
}

/* Quick Template Grid */
.template-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.template-card {
  background: rgba(255, 255, 255, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transition: all 0.2s;
}

.template-card:active {
  background: rgba(255, 255, 255, 0.15);
  transform: scale(0.98);
}

.tpl-label {
  color: #ffd700;
  font-weight: bold;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.tpl-desc {
  color: rgba(255, 255, 255, 0.5);
  font-size: 22rpx;
  white-space: normal;
  /* Allow desc to wrap if needed */
  max-width: 100%;
}

.total-seats-display {
  font-size: 80rpx;
  font-weight: bold;
  text-align: center;
  color: #ffd700;
  margin: 30rpx 0;
  text-shadow: 0 0 30rpx rgba(255, 215, 0, 0.4);
}

.tips {
  color: #666;
  font-size: 24rpx;
  text-align: center;
  margin-top: 10rpx;
}

.role-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}