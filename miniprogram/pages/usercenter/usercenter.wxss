/* pages/usercenter/usercenter.wxss */
.container {
  background-color: #0a0a0c;
  min-height: 100vh;
  position: relative;
  overflow-x: hidden;
  color: #fff;
  padding-bottom: 40rpx;
}

/* 顶部背景装饰 */
.bg-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx;
  background: radial-gradient(circle at 50% 0%, #2a2a35 0%, #0a0a0c 100%);
  z-index: 0;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.content-wrapper {
  position: relative;
  z-index: 1;
  padding: 0 30rpx;
}

/* 用户信息 */
.profile-header {
  display: flex;
  align-items: center;
  padding: 40rpx 0;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 215, 0, 0.3);
  margin-right: 30rpx;
}

.profile-text {
  flex: 1;
}

.nickname {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  display: block;
  margin-bottom: 10rpx;
}

.user-tag {
  display: inline-block;
  font-size: 20rpx;
  color: #ffd700;
  background: rgba(255, 215, 0, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 215, 0, 0.2);
}

.edit-btn {
  font-size: 24rpx;
  color: #888;
  background: rgba(255, 255, 255, 0.1);
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
}

/* 数据悬浮卡片 */
.stats-card {
  background: rgba(30, 30, 36, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 30rpx 0;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.05);
}

.stat-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-val {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 6rpx;
}

.stat-val.accent {
  color: #ffd700;
}

.stat-key {
  font-size: 22rpx;
  color: #888;
}

.stat-divider {
  width: 2rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.1);
}

/* 标题栏 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 10rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #ddd;
}

.section-more {
  font-size: 24rpx;
  color: #666;
}

/* 最近战绩卡片 */
.record-card {
  background: #16161a;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 1rpx solid rgba(255, 255, 255, 0.03);
  transition: all 0.2s;
}

.record-card:active {
  transform: scale(0.98);
  background: #1e1e24;
}

.record-left {
  display: flex;
  align-items: center;
}

.role-icon-box {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 24rpx;
}

.role-icon-box.win {
  background: rgba(82, 196, 26, 0.1);
  border: 1rpx solid rgba(82, 196, 26, 0.2);
}

.role-icon-box.lose {
  background: rgba(255, 77, 79, 0.1);
  border: 1rpx solid rgba(255, 77, 79, 0.2);
}

.record-info {
  display: flex;
  flex-direction: column;
}

.record-res {
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 6rpx;
}

.record-date {
  font-size: 22rpx;
  color: #666;
}

.detail-btn {
  font-size: 24rpx;
  color: #888;
  background: rgba(255, 255, 255, 0.05);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

/* 菜单 Grid */
.menu-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.menu-card {
  background: #16161a;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(255, 255, 255, 0.03);
  transition: all 0.2s;
}

.menu-card:active {
  background: #1e1e24;
}

.menu-icon-bg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-bottom: 16rpx;
}

.menu-text {
  font-size: 24rpx;
  color: #ccc;
}

.feedback-btn-overlay {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
  opacity: 0;
}

.footer-info {
  margin-top: 60rpx;
  text-align: center;
  font-size: 20rpx;
  color: #666;
}

/* --- Edit Profile Modal --- */
.edit-modal {
  position: fixed;
  top: 0; left: 0; width: 100%; height: 100%;
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
  background: rgba(0, 0, 0, 0.85);
  backdrop-filter: blur(5px);
}

.modal-content {
  position: relative;
  width: 600rpx;
  background: #16161a;
  border-radius: 40rpx;
  padding: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.8);
}

.modal-header {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 40rpx;
}

.avatar-wrapper {
  background: transparent !important;
  padding: 0;
  margin-bottom: 40rpx;
  line-height: normal;
  border: none !important;
}

.avatar-preview {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #ffd700;
}

.avatar-tip {
  font-size: 22rpx;
  color: #ffd700;
  margin-top: 16rpx;
}

.input-section {
  width: 100%;
  margin-bottom: 50rpx;
}

.input-label {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 16rpx;
  display: block;
}

.nickname-input {
  width: 100%;
  height: 90rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  color: #fff;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  width: 100%;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.modal-btn.cancel {
  background: rgba(255, 255, 255, 0.1);
  color: #aaa;
}

.modal-btn.confirm {
  background: #ffd700;
  color: #000;
}