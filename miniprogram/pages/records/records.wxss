/* pages/records/records.wxss */
.container {
  background-color: #0a0a0c;
  min-height: 100vh;
  padding: 20rpx;
  color: #fff;
}

.record-list {
  padding-bottom: 40rpx;
}

.record-item {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.record-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.record-date {
  color: #aaa;
  font-size: 24rpx;
}

.record-winner {
  font-weight: bold;
  font-size: 26rpx;
}

.winner-good {
  color: #52c41a;
}

.winner-werewolf {
  color: #ff4d4f;
}

.record-players {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.player-info {
  display: flex;
  align-items: center;
  background: rgba(0, 0, 0, 0.3);
  padding: 4rpx 10rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.player-avatar {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.player-name {
  color: #ccc;
  margin-right: 8rpx;
  max-width: 120rpx; /* Increased from 80rpx */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.player-role {
  color: #ffd700;
}

.view-detail {
  display: block;
  text-align: right;
  font-size: 22rpx;
  color: #bbb;
}

.load-more {
  text-align: center;
  color: #888;
  font-size: 24rpx;
  padding: 20rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 150rpx;
}

.empty-icon-box {
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 215, 0, 0.05);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  border: 2rpx dashed rgba(255, 215, 0, 0.3);
  box-shadow: 0 0 30rpx rgba(255, 215, 0, 0.1);
}

.empty-icon {
  font-size: 80rpx;
  opacity: 0.8;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ddd;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 60rpx;
}

.create-room-btn {
  background: linear-gradient(135deg, #ffd700, #ffae00);
  color: #000;
  font-size: 30rpx;
  font-weight: bold;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  box-shadow: 0 10rpx 20rpx rgba(255, 174, 0, 0.3);
}

.create-room-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}