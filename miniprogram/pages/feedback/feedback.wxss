/* miniprogram/pages/feedback/feedback.wxss */
.container {
  background-color: #0a0a0c;
  min-height: 100vh;
  padding: 40rpx;
  color: #fff;
  /* Override global app.wxss to prevent squashing */
  display: block; 
  box-sizing: border-box;
}

.form-group {
  margin-bottom: 40rpx;
  width: 100%; /* Ensure full width */
}

.label {
  font-size: 28rpx;
  color: #aaa;
  margin-bottom: 20rpx;
  display: block;
}

.feedback-input {
  width: 100%;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 20rpx;
  padding: 30rpx;
  font-size: 28rpx;
  color: #fff;
  box-sizing: border-box;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.contact-input {
  width: 100%;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 20rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #fff;
  box-sizing: border-box;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.placeholder {
  color: #666;
}

.word-count {
  text-align: right;
  font-size: 22rpx;
  color: #666;
  margin-top: 10rpx;
}

.submit-btn {
  width: 100% !important;
  background: #ffd700;
  color: #000;
  border-radius: 50rpx;
  font-weight: bold;
  font-size: 32rpx;
  margin-top: 60rpx;
  padding: 24rpx 0;
}

.submit-btn[disabled] {
  background: rgba(255, 255, 255, 0.1) !important;
  color: #666 !important;
}
