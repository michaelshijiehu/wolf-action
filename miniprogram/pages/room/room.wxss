/* pages/room/room.wxss */
.container {
  background-color: #0a0a0c;
  min-height: 100vh;
  padding: 20rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  transition: background-color 1s ease, color 0.5s ease;
  padding-bottom: calc(250rpx + env(safe-area-inset-bottom));
}

/* 白天模式全屏样式 */
.container.day-mode {
  background-color: #e6f7ff;
  /* 浅蓝白色 */
  color: #333;
}

.container.day-mode .seat-name {
  color: #333;
  font-weight: 600;
  text-shadow: none;
}

.container.day-mode .header {
  color: #555;
}



/* 结束/跳过按钮样式优化 */
.skip-btn {
  margin-top: 20rpx;
  background: rgba(255, 255, 255, 0.1) !important;
  color: #ddd !important;
  font-size: 26rpx;
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 30rpx;
  padding: 10rpx 40rpx;
  line-height: 1.5;
}

.day-mode .skip-btn {
  background: rgba(0, 0, 0, 0.05) !important;
  color: #555 !important;
  border-color: #ccc !important;
}

.header {
  display: none;
  /* Hide header as Room ID is in Title */
}

/* 拖拽区域样式 */
.table-drag-area {
  width: 100%;
  height: 800rpx;
  margin-top: 20rpx;
  overflow: hidden;
  position: relative;
  z-index: 5;
}

.table-drag-area.full {
  height: 1000rpx;
  margin-top: -50rpx;
}

.table-movable-view {
  width: 700rpx;
  height: 700rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.table-movable-view.theater {
  width: 1000rpx;
  height: 1000rpx;
}

.table-container {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  transition: background 1s ease, border 1s ease, box-shadow 1s ease;

  /* 深邃的黑夜木纹/祭坛质感 */
  background: radial-gradient(circle at center, #423832 0%, #261e19 60%, #0f0c0a 100%);

  /* 立体边框：模拟木质包边 */
  border: 12rpx solid #5c4636;

  /* 深度阴影：内阴影制造凹陷感，外阴影制造悬浮感 */
  box-shadow:
    inset 0 0 100rpx rgba(0, 0, 0, 0.9),
    /* 内部暗角 */
    0 0 0 4rpx rgba(0, 0, 0, 0.5),
    /* 边框分割线 */
    0 0 0 8rpx #2e231e,
    /* 外层深色边 */
    0 30rpx 60rpx rgba(0, 0, 0, 0.6);
  /* 桌面投影 */
}

/* 移除旧的 Theater Mode 宽高限制，由 Movable View 控制 */
.table-container.theater-mode {
  width: 100%;
  height: 100%;
  margin-top: 0;
  transform: none;
  border-color: #333;
}

.theater-toggle {
  position: fixed;
  left: 30rpx;
  top: 120rpx;
  /* Log 下方 */
  background: rgba(0, 0, 0, 0.6);
  border: 1px solid #444;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  z-index: 100;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.3);
  transition: all 0.2s;
  color: #ffd700;
}

.theater-toggle:active {
  transform: scale(0.9);
  background: rgba(0, 0, 0, 0.8);
}

/* 桌面内部装饰环 */
.table-container::after {
  content: '';
  position: absolute;
  top: 40rpx;
  left: 40rpx;
  right: 40rpx;
  bottom: 40rpx;
  border-radius: 50%;
  border: 2rpx dashed rgba(255, 255, 255, 0.1);
  pointer-events: none;
  box-shadow: inset 0 0 20rpx rgba(0, 0, 0, 0.5);
}

.table-container.day {
  /* 白天：明亮的浅色木纹或大理石质感 */
  background: radial-gradient(circle at center, #f0f5ff 0%, #d6e4ff 60%, #adc6ff 100%);
  border-color: #d9d9d9;

  /* 白天阴影更柔和 */
  box-shadow:
    inset 0 0 60rpx rgba(24, 144, 255, 0.1),
    0 0 0 8rpx #fff,
    0 20rpx 40rpx rgba(0, 0, 0, 0.15);
}

.table-container.day::after {
  border-color: rgba(24, 144, 255, 0.2);
}

