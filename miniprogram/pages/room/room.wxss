  opacity: 0;
  transition: opacity 0.3s ease;
  backdrop-filter: blur(10px);
}

.role-modal.show {
  opacity: 1;
}

.role-card-3d {
  width: 580rpx;
  height: 900rpx;
  perspective: 2000rpx;
  transition: transform 0.3s ease;
  transform: scale(0.8);
}

.role-modal.show .role-card-3d {
  transform: scale(1);
}

.role-card-inner {
  position: relative;
  width: 100%;
  height: 100%;
  transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  transform-style: preserve-3d;
}

.role-card-3d.flipped .role-card-inner {
  transform: rotateY(180deg);
}

.role-card-face {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
  border-radius: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
