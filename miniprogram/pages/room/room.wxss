/* 游戏进度步进器与事件流 */
.game-extra-info {
  width: 90%;
  margin: 20rpx auto;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  z-index: 5;
}

.day-mode .step-dot {
  background: #ccc;
  border-color: #bbb;
}

.day-mode .step-label {
  color: #999;
}

.day-mode .event-ticker {
  background: rgba(0, 0, 0, 0.03);
  border-color: rgba(0, 0, 0, 0.1);
}

.day-mode .ticker-time {
  color: #888;
}

.day-mode .ticker-text {
  color: #444;
}

.phase-stepper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  position: relative;
}

.phase-stepper::before {
  content: "";
  position: absolute;
  top: 10rpx;
  /* Align with dots */
  left: 50rpx;
  right: 50rpx;
  height: 2rpx;
  background: rgba(255, 255, 255, 0.1);
  z-index: 1;
}

.day-mode .phase-stepper::before {
  background: rgba(0, 0, 0, 0.05);
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 2;
  position: relative;
}

.step-dot {
  width: 20rpx;
  height: 20rpx;
  background: #333;
  border: 4rpx solid #444;
  border-radius: 50%;
  margin-bottom: 12rpx;
  transition: all 0.3s;
}

.step-label {
  font-size: 22rpx;
  color: #666;
  transition: all 0.3s;
}

.step-item.active .step-dot {
  background: #ffd700;
  border-color: #fff;
  box-shadow: 0 0 15rpx #ffd700;
  transform: scale(1.2);
}

.step-item.active .step-label {
  color: #ffd700;
  font-weight: bold;
}

.day-mode .step-item.active .step-label {
  color: #e6b800;
  /* Darker gold for light bg */
}

.step-item.passed .step-dot {
  background: #237804;
  /* 深绿色，表示已完成 */
  border-color: #237804;
  opacity: 0.6;
}

.day-mode .step-item.passed .step-dot {
  background: #b7eb8f;
  border-color: #95de64;
}

.event-ticker {
  background: rgba(255, 255, 255, 0.03);
  border-radius: 20rpx;
  padding: 20rpx 28rpx;
  min-height: 100rpx;
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.05);
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-shadow: inset 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
}

.ticker-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 10rpx;
  animation: slideUp 0.5s ease-out;
}

.ticker-item:last-child {
  margin-bottom: 0;
}

.ticker-time {
  font-size: 20rpx;
  color: #555;
  padding-top: 4rpx;
  white-space: nowrap;
}

.ticker-text {
  font-size: 24rpx;
  color: #ccc;
  line-height: 1.4;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* --- Game Config Info Bar --- */
.game-config-info {
  display: flex;
  flex-direction: row;
  /* Ensure horizontal */
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  gap: 12rpx;
