  border: 4rpx solid rgba(255, 215, 0, 0.3);
}

.role-card-back {
  background: linear-gradient(135deg, #1a1a1e 0%, #2c2c34 100%);
  z-index: 2;
  transform: rotateY(0deg);
}

.role-card-front {
  background: #1a1a1e;
  transform: rotateY(180deg);
  z-index: 1;
}

/* 兼容性兜底：当翻转时强制切换 z-index */
.role-card-3d.flipped .role-card-front {
